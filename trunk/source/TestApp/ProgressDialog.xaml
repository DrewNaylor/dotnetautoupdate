<Window x:Class="TestApp.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Downloading Update..." Height="135" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="1" Margin="10,0,10,0">Downloading:</Label>
        <ProgressBar Name="DownloadProgressBar" Grid.Row="2" Margin="10,0,10,0"/>
    </Grid>
</Window>
